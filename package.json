{
  "name": "@mathext/vector",
  "version": "1.0.0",
  "description": "A simple library of vector operations",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare" : "npm run build",
    "postversion" : "git push && git push --tags",
    "prepublishOnly" : "npm run lint",
    "preversion" : "npm run lint",
    "test": "jest --config jestconfig.json",
    "version" : "npm run format && git add -A src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mathext/vector.git"
  },
  "keywords": ["math", "mathext", "vector"],
  "author": "Franklin Chieze",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mathext/vector/issues"
  },
  "homepage": "https://github.com/mathext/vector#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  }
}
